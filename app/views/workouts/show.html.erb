<p style = "color:black; font-size:150%">
    <strong>Workout Name: </strong>
    <%= @workout.workout %>
</p>
<p style = "color:black; font-size:150%">
    <strong>Description: </strong>
    <%= @workout.description %>
</p>
<p style = "color:black; font-size:150%">
    <strong>Workout Date: </strong>
    <%= @workout.date %>
    
    
<h2 style = "color:black; font-size:150%">Notes</h2>
<% @workout.comments.each do |comment| %>
 
  <p style = "color:black">
    <strong>Note:</strong>
    <%= comment.body %>
  </p>
<% end %>
<h2 style = "color:black">Add a note:</h2>
<%= form_for([@workout, @workout.comments.build]) do |f| %>
  <p style = "color:black">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p style = "color:black">
    <%= f.submit %>
  </p>
<% end %>


</p>
<%= link_to 'Add another workout ', new_workout_path %>
<br>
<%= link_to 'Workouts Page ', workouts_path %>
<br>
<%= link_to 'Home Page ', welcome_index_url %>